#:kivy 1.0.9
#: import SlideTransition kivy.uix.screenmanager.SlideTransition

<ScreenController>:
    canvas.before:
        BorderImage:
            texture: self.background.texture
            size: self.size

    transition: SlideTransition()
    MainScreen:
    OtherScreen:


<MainScreen>:
    name: "main"
    id: main_screen
    Image:
        source: "nes_ico.png"
        size_hint: (0.5, 0.5)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}


    Button:
        on_release:
            root.manager.transition.direction = "left"
            root.manager.current = "other"
        size_hint: (.3, .15)
        background_normal: 'nes_logo.png'
        background_down: 'nes_logo.png'
        border: 0, 0, 0, 0

<OtherScreen>:
    name: "other"
    id: other_screen
    Image:
        source: "snes_ico.png"
        size_hint: (0.5, 0.5)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    Button:
        on_release:
            root.manager.transition.direction = "right"
            root.manager.current = "main"
        size_hint: (.3, .1)
        background_normal: 'snes_logo.png'
        border: 0, 0, 0, 0

    Button:
        on_release: MAINAPP.stop()
        size_hint: (.3, .1)
        text: "Close"
        border: 0, 0, 0, 0
        pos_hint: {'top': 0.9}


