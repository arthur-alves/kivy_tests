#:kivy 1.0.9
#: import SlideTransition kivy.uix.screenmanager.SlideTransition

<ScreenController>:
    canvas.before:
        BorderImage:
            texture: self.background.texture
            size: self.size
    
    transition: SlideTransition()
    MainScreen:
    OtherScreen:


<MainScreen>:
    name: "main"
    id: main_screen
    Label:
        canvas.before:
            BorderImage:
                texture: main_screen.background.texture
                size: self.size
        size_hint: (1, .3)
        center_y: root.height / 2

    Button:
        on_press: app.root.current = "other"
        size_hint: (.1, .15)
        background_normal: 'button.png'
        border: 0, 0, 0, 0

<OtherScreen>:
    name: "other"
    Button:
        on_press: app.root.current = "main"
        size_hint: (.1, .15)
        background_normal: 'button.png'
        border: 0, 0, 0, 0


