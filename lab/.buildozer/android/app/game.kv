#:kivy 1.0.9
#: import SlideTransition kivy.uix.screenmanager.SlideTransition


ScreenManagement:
    canvas.before:
        BorderImage:
            texture: self.background_image.texture
            size: self.size
	GameView:



<GameView>
    canvas.before:
        BorderImage:
            texture: self.background_image.texture
            size: self.size
	Button:
		text: "click to flip"
		top: root.top - 10
		size_hint: (0.2, 0.2)
		on_press:
			root.sprite.flip_h()

	Button:
		text: "click to jump"
		pos_hint: {"top":1, "right": 1}
		size_hint: (0.2, 0.2)
		on_press:
			root.jump()
